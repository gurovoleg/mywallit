//-миксин для обычной карточки
mixin card( imgHover, imgSrc, imgAlt, href, cardText, cardPrice )
	.card-product&attributes(attributes)
		.card-heart-icon.toggle-heart-icon
			i.fas.fa-heart
		.card-product__img
			img.product-img(src="../img/"+ imgSrc data-src= "../img/"+ imgSrc data-hover="../img/"+ imgHover alt =''+ imgAlt )
		a.card-product__text(href = href) #{cardText}
		.card-product__price #{cardPrice}
		block

mixin card--sale( prosent, imgHover, imgSrc, imgAlt, href, cardText, priceOld, priceNew )
	.card-product&attributes(attributes)
		.card-label-sale #{prosent}
		.card-heart-icon.toggle-heart-icon
			i.fas.fa-heart
		.card-product__img
			img.product-img(src="../img/"+ imgSrc data-src= "../img/"+ imgSrc data-hover="../img/"+ imgHover alt =''+ imgAlt )
		a.card-product__text(href = href).
			#{cardText}
		.card-product__price.card__price--sale
			span.price-new #{priceOld}
			span.price-old #{priceNew}
		block