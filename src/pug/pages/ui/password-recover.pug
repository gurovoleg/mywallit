extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Восстановление пароля';
	- var pageClass = 'body--dashboard';

block content

	.container.container--left
		.title Восстановление пароля
		.login
			form.login-form
				.login-form-title.login-form-title--mb-16 Восстановление пароля
				.login-form-subtitle.login-form-subtitle--mb-20
					p.login-form-subtitle__text.
						Введите в поле адрес электронной почты. Мы отправим вам сообщение по электронной почте с инструкциями по созданию нового пароля.
				.login-form__form-group
					+inputField('Email', 'Пожалуйста, введите действительный адрес электронной почты', 'email', 'text', '', '')
				+button-apply('Восстановить пароль', '#')
		pre.
			include ../sections/password-recover.pug