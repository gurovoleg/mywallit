block variables
	- var title = 'Спасибо за заказ';
	- var pageClass = 'body--dashboard';

block content

	.container.container--left
		.title Спасибо за заказ
		
			.thanks
				.thanks-header
					.thanks-header__title Спасибо за заказ!
					.thanks-header__subtitle #[span Артем], Ваш заказ успешно оформлен!
						|
						br
						|Мы отправим Вам письмо с информацией о заказе на 
						a.shopper-email(href="#") kikhtenko.artem@gmail.com
				.thanks-order-number Заказ № #[span 124-11]
				
				.ordered-wrapper
					.ordered-goods
						+ordered-goods-item('good_thumbnail/blue-purse/thumb_blue-purse-1.png',' кошелек синий', 'Портмоне тройного сложения с внешним карманом для монет на молнии, с ручкой', '1252-130', '4 893р.' )(class="ordered-goods-item--special")
						+ordered-goods-item('good_thumbnail/blue-purse/thumb_blue-purse-2.png',' кошелек синий', 'Портмоне тройного сложения с внешним карманом для монет на молнии, с ручкой', '1252-130', '4 893р.' )(class="ordered-goods-item--special")
						+ordered-goods-item('good_thumbnail/blue-purse/thumb_blue-purse-1.png',' кошелек синий', 'Портмоне тройного сложения с внешним карманом для монет на молнии, с ручкой', '1252-130', '4 893р.' )(class="ordered-goods-item--special")
					.ordered-calc
						.ordered-calc__item
							span.ordered-calc-text Стоимость
							span.ordered-calc-price 14 679р.
						.ordered-calc__item
							span.ordered-calc-text Скидка
							span.ordered-calc-price -450р.
						.ordered-calc__item
							span.ordered-calc-text Доставка
							span.ordered-calc-price 0р.
						.ordered-calc__item.ordered-calc__item--bold
							span.ordered-calc-text Всего к оплате
							span.ordered-calc-price 14 229р.
				+button-apply('оплатить', '#')
		pre.
			include ../section/thanks-for-ordering.pug