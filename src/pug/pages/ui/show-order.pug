extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Показать заказ';
	- var pageClass = 'body--dashboard';

block content

	.container.container--left
		.title Показать заказ
		.ordered-header
			.ordered-header__title Показать заказ ( #[span.ordered-header-amount 3] товара)&mdash; #[span.ordered-header__cost 15 000 р.]
				.ordered-header-arrow
					i.fas.fa-sort-down
		.ordered
			.ordered-wrapper
				.ordered-goods
					+ordered-goods-item('good_thumbnail/blue-purse/thumb_blue-purse-1.png',' кошелек синий', 'Портмоне тройного сложения с внешним карманом для монет на молнии, с ручкой', '1252-130', '4 893р.' )
					+ordered-goods-item('good_thumbnail/blue-purse/thumb_blue-purse-2.png',' кошелек синий', 'Портмоне тройного сложения с внешним карманом для монет на молнии, с ручкой', '1252-130', '4 893р.' )
					+ordered-goods-item('good_thumbnail/blue-purse/thumb_blue-purse-1.png',' кошелек синий', 'Портмоне тройного сложения с внешним карманом для монет на молнии, с ручкой', '1252-130', '4 893р.' )

				.ordered-item
					.ordered-promo
						+inputField('Введите промо-код', '', 'notCheck', 'text', 'promo-input')
						+button-apply('Применить', '#')
					.ordered-promo-type
						a.ordered-promo-type__code.active-type(href="#") Промо-код
						a.ordered-promo-type__card(href="#") Клубная карта
				.ordered-calc
					.ordered-calc__item
						span.ordered-calc-text Стоимость
						span.ordered-calc-price 14 679р.
					.ordered-calc__item
						span.ordered-calc-text Скидка
						span.ordered-calc-price -450р.
					.ordered-calc__item
						span.ordered-calc-text Доставка
						span.ordered-calc-price 0р.
					.ordered-calc__item.ordered-calc__item--bold
						span.ordered-calc-text Всего к оплате
						span.ordered-calc-price 14 229р.

		pre.
			include ../sections/show-order.pug